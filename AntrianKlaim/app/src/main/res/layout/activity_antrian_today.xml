<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/headeran"
    tools:context=".AntrianNasabah.AntrianTodayActivity"
    >
    <LinearLayout
        android:id="@+id/layoutHeaderDO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/txtHeader"
                android:textSize="15sp"
                android:text="Klik Dibawah Ini Untuk,"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinsbold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <Button
                android:id="@+id/btnBuatAntrian"
                android:textSize="15sp"
                android:background="@drawable/custom_button"
                android:layout_marginTop="1dp"
                android:layout_below="@id/txtHeader"
                android:text="Ambil Antrian"
                android:textColor="@color/white"
                android:fontFamily="@font/poppinsbold"
                android:layout_width="250dp"
                android:layout_height="40dp"
                />
            <Button
                android:id="@+id/btnRefresh"
                android:textSize="15sp"
                android:background="@drawable/custom_button"
                android:layout_marginTop="10dp"
                android:layout_below="@id/btnBuatAntrian"
                android:text="Refresh"
                android:textColor="@color/white"
                android:fontFamily="@font/poppinsbold"
                android:layout_width="250dp"
                android:layout_height="40dp"
                />
        </RelativeLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnOrderPreserved="false"
                android:alignmentMode="alignMargins"
                android:rowCount="3"
                android:columnCount="1"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_DUDetailAntrianToday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:clickable="true"
                    android:focusable="true"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp">
                    <LinearLayout
                        android:padding="16dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:background="@drawable/back_card1"
                        android:layout_height="wrap_content">
                        <TextView
                            android:fontFamily="@font/poppinsbold"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:text="No Antrian Saat Ini"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/antrianLast"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:text="-----"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:fontFamily="@font/poppinsbold"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:text="Antrian Sedang Dilayani"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/antrianServi"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:text="------"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/antrianServWaktu"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:text="------"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_DUAntrianUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:clickable="true"
                    android:focusable="true"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp">
                    <LinearLayout
                        android:padding="16dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:background="@drawable/back_card1"
                        android:layout_height="wrap_content">
                        <TextView
                            android:fontFamily="@font/poppinsbold"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:text="No Antrian Anda"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/antrianNasabah"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:text="-----"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/statusNasabah"
                            android:fontFamily="@font/poppinsmedium"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:text="-----------------"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>