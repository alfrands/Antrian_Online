<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainListAbsenActivity">
    <LinearLayout
        android:id="@+id/layoutHeaderUserOwner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/headeran"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/txtWelcomeDashAdmin"
                android:textSize="15sp"
                android:text="Data Antrian"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinsbold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/txtIdUserMainAntrianTdyAdmin"
                android:textSize="15sp"
                android:text="Selamat Datang,"
                android:visibility="gone"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinsbold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtWelcomeDashAdmin"
                />
            <TextView
                android:id="@+id/txtNamaDashAdmin"
                android:textSize="20sp"
                android:layout_marginTop="1dp"
                android:layout_below="@id/txtIdUserMainAntrianTdyAdmin"
                android:text="Hari Ini"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinsbold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
    </LinearLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refreshAntrianTdy"
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_viewAntrianTdy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>