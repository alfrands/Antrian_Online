<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/headeran"
    tools:context=".AntrianTdyAdmin.EditAntrianTdyActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:text="PROSES ANTRIAN"
            android:textSize="25sp"
            android:textColor="@color/biru"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="jelly_bean" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="30dp"
            android:hint="ID Antrian"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etIdAntrian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="16"
                android:drawableEnd="@drawable/humanfolderpublic"
                android:drawableRight="@drawable/humanfolderpublic"
                android:fontFamily="@font/poppinsmedium"
                tools:targetApi="jelly_bean"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutIdUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="30dp"
            android:hint="ID User"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etIdUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="16"
                android:drawableEnd="@drawable/humanfolderpublic"
                android:drawableRight="@drawable/humanfolderpublic"
                android:fontFamily="@font/poppinsmedium"
                tools:targetApi="jelly_bean"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutidNasabah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="30dp"
            android:hint="Id Nasabah"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etIdNasabah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="16"
                android:drawableEnd="@drawable/humanfolderpublic"
                android:drawableRight="@drawable/humanfolderpublic"
                android:fontFamily="@font/poppinsmedium"
                tools:targetApi="jelly_bean"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutNoAntrian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:enabled="false"
            android:layout_marginTop="0dp"
            android:layout_marginRight="30dp"
            android:hint="Nomor Antrian"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNoAntri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="16"
                android:drawableEnd="@drawable/humanfolderpublic"
                android:drawableRight="@drawable/humanfolderpublic"
                android:fontFamily="@font/poppinsmedium"
                tools:targetApi="jelly_bean"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutnamalengkap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:enabled="false"
            android:layout_marginTop="1dp"
            android:layout_marginRight="30dp"
            android:hint="Nama Lengkap"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutNoAntrian">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNamaLengkap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/people1"
                android:drawableRight="@drawable/people1"
                android:fontFamily="@font/poppinsmedium"
                tools:targetApi="jelly_bean"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutNoHp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:enabled="false"
            android:layout_marginRight="30dp"
            android:hint="No Handphone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutnamalengkap">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNoHp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="15"
                android:drawableEnd="@drawable/usercard1"
                android:drawableRight="@drawable/usercard1"
                android:fontFamily="@font/poppinsmedium"
                tools:targetApi="jelly_bean"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/btnPanggilAntrian"
            android:tint="@color/white"
            android:background="@drawable/custom_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:fontFamily="@font/poppinsbold"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Panggil Antrian"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutNoHp" />
        <Button
            android:id="@+id/btnProsesAntrian"
            android:tint="@color/white"
            android:background="@drawable/custom_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:fontFamily="@font/poppinsbold"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Proses Antrian"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnPanggilAntrian" />
        <Button
            android:id="@+id/btnSelesaiAntrian"
            android:tint="@color/white"
            android:background="@drawable/custom_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:fontFamily="@font/poppinsbold"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Selesai"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnProsesAntrian" />

        <Button
            android:id="@+id/btnTidakHadir"
            android:tint="@color/white"
            android:background="@drawable/custom_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:fontFamily="@font/poppinsbold"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tidak Hadir"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSelesaiAntrian" />
        <Button
            android:id="@+id/btnKembali"
            android:tint="@color/white"
            android:background="@drawable/custom_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:fontFamily="@font/poppinsbold"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Kembali"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnTidakHadir" />

        <TextView
            android:id="@+id/loginText"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Welcome To SI Antrian Klaim App"
            app:layout_constraintEnd_toEndOf="@id/btnKembali"
            app:layout_constraintStart_toStartOf="@id/btnKembali"
            app:layout_constraintTop_toBottomOf="@id/btnKembali"
            tools:targetApi="jelly_bean" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>