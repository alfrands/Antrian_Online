<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/headeran"
    tools:context=".Dashboard.DashUserActivity"
    >
    <LinearLayout
        android:id="@+id/layoutHeaderDO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/txtWelcomeDashUser"
                android:textSize="15sp"
                android:text="Selamat Datang,"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinsbold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/txtIdUserDashUser"
                android:textSize="15sp"
                android:text="Selamat Datang,"
                android:visibility="gone"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinsbold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtWelcomeDashUser"
                />
            <TextView
                android:id="@+id/txtNamaDashUser"
                android:textSize="20sp"
                android:layout_marginTop="1dp"
                android:layout_below="@id/txtIdUserDashUser"
                android:text="User"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinsbold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnOrderPreserved="false"
                android:alignmentMode="alignMargins"
                android:rowCount="3"
                android:columnCount="1"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_DUAntrianToday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp">
                    <LinearLayout
                        android:padding="16dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:background="@drawable/back_card1"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/hourglass"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            />
                        <TextView
                            android:fontFamily="@font/poppinsbold"
                            android:layout_marginTop="12dp"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:text="Antrian Hari Ini"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_DUPersyaratan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp">
                    <LinearLayout
                        android:padding="16dp"
                        android:gravity="center"
                        android:background="@drawable/back_card1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/documentss"
                            android:layout_width="80dp"
                            android:layout_height="80dp"

                            />
                        <TextView
                            android:fontFamily="@font/poppinsbold"
                            android:layout_marginTop="12dp"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:text="Persyaratan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_DUTentangKami"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp">
                    <LinearLayout
                        android:padding="16dp"
                        android:gravity="center"
                        android:background="@drawable/back_card1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/idea"
                            android:layout_width="80dp"
                            android:layout_height="80dp"

                            />
                        <TextView
                            android:fontFamily="@font/poppinsbold"
                            android:layout_marginTop="12dp"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:text="Tentang Kami"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_DUUbahPass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp">
                    <LinearLayout
                        android:padding="16dp"
                        android:gravity="center"
                        android:background="@drawable/back_card1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/settings"
                            android:layout_width="80dp"
                            android:layout_height="80dp"

                            />
                        <TextView
                            android:fontFamily="@font/poppinsbold"
                            android:layout_marginTop="12dp"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:text="Ubah Password"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_DULogOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp">
                    <LinearLayout
                        android:padding="16dp"
                        android:gravity="center"
                        android:background="@drawable/back_card1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/padlock"
                            android:layout_width="80dp"
                            android:layout_height="80dp"

                            />
                        <TextView
                            android:fontFamily="@font/poppinsbold"
                            android:layout_marginTop="12dp"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:text="Log Out"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

        </LinearLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>